<mvc:View controllerName="com.sap.rcp.zqmreworkconfirm.controller.View2" xmlns:t="sap.ui.table" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <Page id="page1" title="{i18n>reworkconfirm}" showNavButton="true" navButtonPress="onBack">
        <content>
            <VBox id="_IDGenVBox1" class="sapUiSmallMargin" backgroundDesign="Solid">
                <f:SimpleForm id="id_View2" editable="true" layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2">
                    <f:content>
                        <core:Title id="_IDGenTitle1" />
                        <Label id="_IDGenLabel1" text="{i18n>plant}" />
                        <Input id="id_pllant2" value="" enabled="false" />
                        <Label id="_IDGenLabel2" text="{i18n>shift}" />
                        <Input id="_IDGenInput1" value="{AfterMatDetails>/Shift}" enabled="false" />
                        <Label id="_IDGenLabel3" text="{i18n>materialCode}"/>
                        <Input id="id_material" value="" valueHelpRequest="onMaterial" showValueHelp="true" valueHelpOnly="true" required="true"/>
                        <Label id="_IDGenLabel4" text="{i18n>prgmName}" />
                        <Input id="_IDGenInput3" value="{AfterMatDetails>/ProgramName}" enabled="false" />
                        <Label id="_IDGenLabel5" text="{i18n>superWiser}" />
                        <Input id="id_supervisor" value="" valueHelpRequest="onSupervisor" showValueHelp="true" valueHelpOnly="true" required="true"/>

                        <core:Title id="_IDGenTitle2" />
                        <Label id="_IDGenLabel6" text="{i18n>lotnum}" />
                        <Input id="id_lotNum2" value="" enabled="false" />
                        <Label id="_IDGenLabel7" text="{i18n>prdDate}" />
                        <DatePicker enabled="false" id="idDatePicker" value="{path: 'view>/dDefaultDate', type: 'sap.ui.model.type.Date'}" valueFormat="yyyy-MM-dd" displayFormat="long" />
                        <!-- <DatePicker id="DP2" value="2014-03-26" change="handleChange" /> -->
                        <!-- <Input id="_IDGenInput5" value="{OtherDetails>/ProductionDate}" enabled="false"/> -->
                        <Label id="_IDGenLabel8" text="{i18n>shdCode}" />
                        <Input id="_IDGenInput6" value="{AfterMatDetails>/Shade}" enabled="false" />
                        <Label id="_IDGenLabel9" text="{i18n>customer}" />
                        <Text id="_IDGenText1" text="{AfterMatDetails>/Customer}" />
                        <!-- <Label id="_IDGenLabel10" />
                        <Button id="_IDGenButton1" text="{i18n>enter}" type="Accept" />
                        <Button id="_IDGenButton2" text="{i18n>cancel}" type="Reject" /> -->
                    </f:content>
                </f:SimpleForm>
            </VBox>
            <VBox id="_IDGenVBox2" class="sapUiSmallMargin" backgroundDesign="Solid">
                <f:SimpleForm id="id_View21" editable="true" layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2">
                    <f:content>
                        <core:Title id="_IDGenTitle21" />
                        <Label id="_IDGenLabel11" text="{i18n>reworkpo}" />
                        <Input id="id_pllant21" value="" valueHelpRequest="onProdOrder" showValueHelp="true" />
                        <Label id="_IDGenLabel21" text="{i18n>reworkoq}" />
                        <Input id="_IDGenInput11" value="{reProdOrdDetails>/ReworkOrdQty}" enabled="false"/>
                        <Label id="_IDGenLabel31" text="{i18n>breworkoq}" />
                        <Input id="_IDGenInput21" value="{reProdOrdDetails>/BalanceOrdQty}" enabled="false"/>
                        <core:Title id="_IDGenTitle22" />
                        <Label id="_IDGenLabel12" />
                        <!-- <Button id="_IDGenButton13" text="{i18n>lotDetail}" type="Emphasized" width="50%" /> -->
                    </f:content>
                </f:SimpleForm>
            </VBox>
            <VBox id="_IDGenVBox6" class="sapUiSmallMargin" backgroundDesign="Solid">
                <OverflowToolbar>
                    <ToolbarSpacer/>
                    <Button icon="sap-icon://add" type="Accept" press="onAdd"/>
                    <!-- <core:Icon src="sap-icon://add" color="#031E48">
                        <core:layoutData>
                            <FlexItemData growFactor="1"/>
                        </core:layoutData>
                    </core:Icon> -->
                </OverflowToolbar>
                <t:Table rows="{initData>/}" selectionMode="None" visibleRowCountMode="Interactive" paste="onPaste" ariaLabelledBy="title">
                    <t:columns>
                        <t:Column>
                            <Label text="{i18n>RforR}" />
                            <t:template>
                                <Input value="{initData>RforR}" valueHelpRequest="onReasonFR" showValueHelp="true" />
                            </t:template>
                        </t:Column>
                        <t:Column>
                            <Label text="{i18n>TotalRejection}" />
                            <t:template>
                                <Input value="{initData>totalR}" change="onAmountCalculate" liveChange="onAmountCalculate" type="Number"/>
                            </t:template>
                        </t:Column>
                        <t:Column>
                            <Label text="{i18n>balanceqty}" />
                            <t:template>
                                <Input value="{initData>balQty}" enabled="false"/>
                            </t:template>
                        </t:Column>
                        <!-- <t:Column>
                            <Label text="{i18n>confqfy}" />
                            <t:template>
                                <Text text="{initData>confQty}" />
                            </t:template>
                        </t:Column> -->
                        <t:Column>
                            <Label text="{i18n>WorkCtr}" />
                            <t:template>
                                <Input value="{initData>workCenter}" valueHelpRequest="onWorkCenter" showValueHelp="true" />
                            </t:template>
                        </t:Column>
                        <t:Column>
                            <Label text="{i18n>wcDescription}" />
                            <t:template>
                                <Input value="{initData>wcDesc}" enabled="false"/>
                            </t:template>
                        </t:Column>
                        <t:Column>
                            <Label text="{i18n>TeamNo}" />
                            <t:template>
                                <Input value="{initData>teamNo}" valueHelpRequest="onTeamNo" showValueHelp="true" />
                            </t:template>
                        </t:Column>
                        <t:Column width="3rem">
                            <Label />
                            <t:template>
                                <Button icon="sap-icon://delete" type="Reject" press="onDelete"/>
                            </t:template>
                        </t:Column>
                    </t:columns>
                </t:Table>
            </VBox>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button text="{i18n>refresh}" type="Ghost" press="onRefresh"/>
                <Button text="{i18n>save}" type="Accept" press="onSave" />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
