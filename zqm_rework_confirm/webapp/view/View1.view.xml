<mvc:View controllerName="com.sap.rcp.zqmreworkconfirm.controller.View1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>enterPlantLot}">
        <content>
            <VBox id="_IDGenVBox1" class="sapUiSmallMargin">
                <f:SimpleForm
                    id="id_View1"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="4"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="5"
                    emptySpanL="5"
                    emptySpanM="5"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <Label id="_IDGenLabel1" text="{i18n>plant}"/>
                        <Input id="id_plant" value="" valueHelpRequest="onPlantValidation" showValueHelp="true" change="onPlantValidation1"/>
                        <Label id="_IDGenLabel2" text="{i18n>lotnum}"/>
                        <Input id="id_lotNum" value="" change="onLotValidation" />
                        <Label id="_IDGenLabel3"/>
                        <Button id="_IDGenButton1" text="{i18n>enter}" width="50%" press="onToPage2" type="Accept"/>
                        <Button id="_IDGenButton2" text="{i18n>cancel}" type="Reject" press="onCancel"/>
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
    </Page>
</mvc:View>
